@using Blogzaur.Application.Comment.Commands.CreateComment
@model Blogzaur.Application.BlogEntry.BlogEntryDto

<head>
    <link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />
</head>

@{
    ViewData["Title"] = "Details";
}


<div class="margin-large">
    <div class="pb-5">
        <a class="btn btn-primary" asp-controller="BlogEntry" asp-action="List">Back to List</a>
        @if (Model.isEditable)
        {
            <a class="btn btn-primary mx-4" asp-controller="BlogEntry" asp-action="Edit" asp-route-id="@Model.Id">Edit blog</a>
        }
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
    </dl>
</div>


<div class="margin-large">
    <hr />
    <h2>@Model.Title</h2>
    <div style="margin-top:50px;">@Html.Raw(Model.Content)</div>
    <hr />
</div>

<div class="margin-large">
    <h3>Add a comment:</h3>
    <partial name="_CreateComment" model="new CreateCommentCommand() {BlogEntryId = Model.Id}" />

    <h3>Comments:</h3>

    <div class="mt-4" id="comments" data-blog-id="@Model.Id"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/BlogEntry/Details.js"></script>
}
